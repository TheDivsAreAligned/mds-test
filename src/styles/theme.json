{
  "palette": {
    "primary": {
      "main": "#FFF"
    },
    "secondary": {
      "light": "#00A9F4",
      "main": "#051C2C"
    },
    "text": {
      "primary": "#000",
      "secondary": "#FFF"
    }
  },
  "typography": {
    "fontFamily": "Source Sans Pro",
    "h1": {
      "fontFamily": "Merriweather"
    },
    "h2": {
      "fontFamily": "Merriweather"
    },
    "h3": {
      "fontFamily": "Merriweather",
      "fontWeight": 300,
      "fontSize": "5rem"
    },
    "h4": {
      "fontFamily": "Merriweather",
      "fontWeight": 300,
      "fontSize": "1.75rem"
    },
    "h5": {
      "fontFamily": "Source Sans Pro"
    },
    "subtitle2": {
      "fontWeight": 100,
      "fontSize": "1rem"
    },
    "caption": {
      "color": "#7F7F7F"
    }
  },
  "props": {
    "MuiAppBar": {
      "position": "sticky"
    },
    "MuiButtonBase": {
      "disableRipple": true
    },
    "MuiTypography": {
      "display": "block",
      "gutterBottom": true
    }
  },
  "overrides": {
    "MuiAppBar": {
      "root": {
        "padding": "0rem 2rem",
        "height": "4rem",
        "maxHeight": "3rem",
        "transition": "max-height 300ms ease-in-out"
      }
    },
    "MuiButton": {
      "root": {
        "minHeight": "100%",
        "borderRadius": 0,
        "transition": "all 200ms ease",
        "&:hover": {
          "color": "#1F40E6",
          "backgroundColor": "none"
        }
      }
    },
    "MuiCard": {
      "root": {
        "margin": ".5rem",
        "borderRadius": 0,
        "minWidth": 275
      }
    },
    "MuiExpansionPanelDetails": {
      "root": {
        "padding": ".5rem 3rem 1.5rem"
      }
    },
    "MuiExpansionPanelSummary": {
      "root": {
        "paddingLeft": 0,
        "flexDirection": "row-reverse"
      }
    },
    "MuiLink": {
      "root": {
        "borderRadius": 0,
        "transition": "transform 200ms ease-in-out",
        "cursor": "pointer",
        "& svg": {
          "transition": "transform 200ms ease-in-out",
          "transform": "translate(.5rem, 3px)"
        },
        "&:hover": {
          "transform": "translate(0, 5px)",
          "fontWeight": "100",
          "text-decoration": "none !important",
          "& svg": {
            "transform": "translate(1rem, .125rem)"
          }
        },
        "&:active": {
          "color": "initial"
        }
      }
    },
    "MuiToolbar": {
      "root": {
        "transition": "min-height 300ms ease-in"
      },
      "gutters": {
        "padding": ".25rem 2rem"
      },
      "dense": {
        "height": "48px"
      },
      "regular": {
        "height": "64px"
      }
    },
    "MuiTypography": {
      "gutterBottom": {
        "marginBottom": "1rem"
      }
    },
    "MuiSvgIcon": {
      "root": {
        "margin": ".125rem"
      }
    }
  }
}
